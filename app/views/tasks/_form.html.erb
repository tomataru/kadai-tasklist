
 <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.full_messages.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
<% end %>


<%= form_for(@task) do |f|%>

<div class="form-group col-xs-12 col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-6">
  <%= f.label :status, 'ステータス' %>
  <%= f.text_field :status,class: 'form-control'%>
</div>

<div class="form-group col-xs-12 col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-6">
  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content,class: 'form-control' %>
</div>

<div class="form-group col-xs-12 col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-6">
  <%= link_to '一覧に戻る', tasks_path,class: 'btn btn-default' %>
  <%= f.submit '登録' ,class: 'btn btn-primary' %>
</div>


<% end %>
</div>
