<h1>タスク一覧</h1>
<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>

 <% if @tasks.any? %>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>id</th>
        <th>status</th>
        <th>task</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.id, task %></td>
        <td><%= task.status %></td>
        <td><%= task.content %></td>
      </tr>
      <% end %>
    </tbody>
    
  </table>
    <%= paginate @tasks %>
<% end %>
<div>
<%= link_to '新規タスクの登録', new_task_path,class: "btn btn-primary"%>
</div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the TASKLIST</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>